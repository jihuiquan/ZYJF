<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_theme">
    <include layout="@layout/toolbar"/>
    <finan.heng.com.apps.widgets.NoticeView
        android:id="@+id/notice_bank"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#ffe8bd"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:nvIcon="@drawable/ic_bank_notice"
        app:nvIconPadding="10dp"
        app:nvTextColor="#fc291d"
        app:nvTextGravity="left"
        app:nvTextSize="12sp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text="仅支持储蓄卡，暂不支持信用卡，具体金额以实际限额为准"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_line"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1px"
        android:divider="@color/bg_line"
        android:id="@+id/bank_listview"/>

</LinearLayout>