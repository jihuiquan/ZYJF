<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/selector_item_click">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_1_dp"
        android:background="@color/color_eeeeee"/>

    <ImageView
        android:id="@+id/iv_platform_logo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/divide_15_dp"
        android:layout_marginRight="@dimen/divide_14_dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_platform_logo"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_platform_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付方式"
            android:textColor="@color/color_333333"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_platform_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="账户余额"
            android:textColor="@color/color_333333"
            android:textSize="12sp"/>
    </LinearLayout>


</RelativeLayout>