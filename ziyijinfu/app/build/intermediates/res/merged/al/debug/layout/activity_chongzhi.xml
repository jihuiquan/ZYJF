<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <finan.heng.com.apps.widgets.NoticeView
        android:id="@+id/notice_bank"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#ffe8bd"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        app:nvIcon="@drawable/ic_bank_notice"
        app:nvIconPadding="10dp"
        app:nvTextColor="@color/text_Fc291d"
        app:nvTextGravity="left"
        app:nvTextSize="12sp" />

    <TextView
        android:id="@+id/activity_chongzhi_tvone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_333333"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tixian_bank_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/tixian_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tixian_bank_icon"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tixian_bank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/tixian_bank_icon"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/activity_chongzhi_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_account_cash"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_cash_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_cash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:digits="0123456789"
            android:gravity="right"
            android:maxLength="10"
            android:textColor="@color/txt_product_red"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activity_chongzhi_tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/chongzhi_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:digits="0123456789."
            android:gravity="right"
            android:maxEms="12"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_bbbbbb"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/bg_line" />

    <RelativeLayout
        android:id="@+id/ll_paytype"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_paytype_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/tv_paytype"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"

            />

    </RelativeLayout>

    <TextView
        android:id="@+id/activity_chongzhi_tishi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_award"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_award_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_award"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:digits="0123456789"
            android:gravity="right"
            android:maxLength="10"
            android:text="0.00元"
            android:textColor="@color/txt_product_red"
            android:textSize="16sp" />

    </LinearLayout>

    <Button
        android:id="@+id/activity_chongzhi_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_unclick"
        android:enabled="false"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/activity_chonghi_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/chongzhi_choose"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="15dp"
            android:src="@drawable/ic_checked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activity_chongzhi_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《子壹金服快捷支付服务协议》"
            android:textColor="@color/color_5aa0ff"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>