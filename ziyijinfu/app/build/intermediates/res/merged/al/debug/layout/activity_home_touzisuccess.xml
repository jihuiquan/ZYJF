<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_theme">

        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:id="@+id/rl_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_toolbar"
            android:layout_marginBottom="20dp"
            android:background="#f4f5f8">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc" />

            <ImageView
                android:id="@+id/iv_iconsuccess"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:src="@drawable/ic_purchase_sucess" />

            <TextView
                android:id="@+id/tv_paymentSuccessTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_iconsuccess"
                android:layout_centerHorizontal="true"
                android:textColor="@color/txt_gray_tab"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/invest_reword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_success"
            android:layout_marginBottom="@dimen/divide_10_dp"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reward_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="投资奖励"
                android:textColor="#333"
                android:textSize="16sp" />

            <HorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="16dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_youhuiquan"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/invest_reword"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_paymentSuccessAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_jine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="10000"
                android:textColor="@color/text_Fc291d"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rl_youhuiquan"
            android:layout_marginLeft="15dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_qixian"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/view3"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_paymentSuccessPlstimeLimitLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="30天"
                android:textColor="#333"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rl_qixian"
            android:layout_marginLeft="15dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_zongshouyi"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/view4"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_paymentSuccessProfitLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_zongshouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="135.68"
                android:textColor="@color/text_Fc291d"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rl_zongshouyi"
            android:layout_marginLeft="15dp"
            android:background="#e5e5e5" />

        <RelativeLayout
            android:id="@+id/rl_award"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/view5"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textColor="#333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_label"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="135.68"
                android:gravity="right"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_Fc291d"
                android:textSize="13sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_award"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="奖励在1~3个工作日发放，请到我的账户中查看"
            android:textColor="@color/txt_product_light_gray"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_touzisuccess"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_warning"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/divide20_dp"
            android:layout_marginRight="@dimen/divide20_dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_submit_round_rect"
            android:text="完成"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

</ScrollView>