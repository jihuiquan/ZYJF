<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#F4F5F8"
              android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"/>

    <RelativeLayout
        android:id="@+id/rl_shiming"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view10"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/divide_15_dp"
            android:text="原密码"
            android:textColor="#333333"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_oldkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="请输入原登录密码"
            android:textColor="#666"
            android:textColorHint="#bbb"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="@dimen/divide_30_dp"
            android:id="@+id/activity_reviseloginmima1"
            android:layout_height="@dimen/divide_30_dp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:src="@drawable/mimayan"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/divide_15_dp"
            android:text="新密码"
            android:textColor="#333333"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_newkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:inputType="textPassword"
            android:background="@null"
            android:hint="请输入新登录密码"
            android:textColor="#666"
            android:textColorHint="#bbb"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="@dimen/divide_30_dp"
            android:layout_height="@dimen/divide_30_dp"
            android:clickable="true"
            android:id="@+id/activity_reviseloginmima2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/divide_15_dp"
            android:src="@drawable/mimayan"/>


    </RelativeLayout>
    <TextView
        android:id="@+id/tv_retrive_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="忘记原登录密码？"
        android:gravity="right"
        android:padding="15dp"
        android:textColor="#5aa0ff"
        android:textSize="14sp"
        />
    <Button
        android:id="@+id/bt_revise"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/divide20_dp"
        android:layout_marginRight="@dimen/divide20_dp"
        android:background="@drawable/bg_submit_gray"
        android:enabled="false"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:text="确认修改"
        android:textColor="#fff"
        android:textSize="16sp"


        />

</LinearLayout>