<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="265dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_risk_evaluation_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:text="温馨提示"
        android:textColor="@color/color_333333"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资金额超出了"
                android:textColor="@color/color_666"
                android:textSize="13sp" />

            <!--<TextView-->
                <!--android:id="@+id/own_type"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="稳健型"-->
                <!--android:textColor="@color/text_Fc291d"-->
                <!--android:textSize="13sp" />-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="限额"-->
                <!--android:textColor="@color/color_666"-->
                <!--android:textSize="13sp" />-->

        </LinearLayout>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="默认类型"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_666"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="根据监管部门规定，您在投资前\n必须完成"
            android:textColor="@color/color_666"
            android:textSize="13sp" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“风险测评”"
            android:textColor="@color/text_Fc291d"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="默认类型为进取型，对投资金额无限制"
            android:textColor="@color/color_666"
            android:textSize="13sp" />

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">



        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="“风险测评”"
            android:textColor="@color/text_Fc291d"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="稳健型单笔投资金额不超过50万。\n 进取型对投资金额无限制"
            android:textColor="@color/color_666"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="#efefef"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/left_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="重新测评"
            android:textColor="@color/color_333333"
            android:textSize="16sp" />
        <View
            android:id="@+id/middle_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#efefef"></View>
        <TextView
            android:id="@+id/right_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一键默认"
            android:textColor="@color/text_Fc291d"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
