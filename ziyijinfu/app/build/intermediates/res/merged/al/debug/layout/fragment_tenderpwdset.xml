<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_theme"
    android:id="@+id/fragment_tenderpwd"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text="温馨提示：您在投资和提现过程中均需要使用该交易密码，请妥善保管密码，切勿告诉他人"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_radis_white"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/iv_tenderpwd_init"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_tenderpwd_init"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/tv_tenderpwd_init"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_tenderpwd_init"
                android:text="交易密码"
                android:textColor="#333333"
                android:textSize="14sp"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_tenderpwd_init"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_eye_open"
                android:layout_toRightOf="@id/tv_tenderpwd_init"
                android:background="@null"
                android:hint="请输入交易密码"
                android:textColor="@color/black"
                android:inputType="number"
                android:maxLength="6"
                android:textColorHint="#999"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_eye_open"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_tenderpwd_close"

                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bg_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_tenderpwd_retrive"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_tenderpwd_retrive"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:id="@+id/tv_tenderpwd_retrive"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/iv_tenderpwd_retrive"
                android:text="再次确认"
                android:textColor="#333333"
                android:textSize="14sp"
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/et_tenderpwd_retrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_eye_retirve"
                android:layout_toRightOf="@id/tv_tenderpwd_retrive"
                android:background="@null"
                android:hint="请再次输入交易密码"
                android:textColor="@color/black"
                android:textColorHint="#999"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_eye_retirve"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_tenderpwd_close"

                />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_tenderpwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl7"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_submit_gray"
        android:text="下一步"
        android:enabled="false"
        android:textColor="#fff"
        android:textSize="16sp" />
    <!--android:enabled="false"-->

</LinearLayout>