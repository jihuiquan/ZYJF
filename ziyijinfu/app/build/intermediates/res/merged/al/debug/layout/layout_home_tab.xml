<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_platformIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_platformIntro"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_platform_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_safe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_safe"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_safe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_invite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_invite"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/color_333333"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_userGuide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_userGuide"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/new_user_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_helpCenter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_helpCenter"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_home_helpcenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>