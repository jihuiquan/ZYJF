<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/menu_item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/left_view"
            style="@style/View.Vertical"
            android:layout_marginLeft="15dip"
            android:minHeight="45dp"
            android:visibility="gone">

            <LinearLayout
                style="@style/View.Vertical"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_line_ver_top"
                    style="@style/View.Vertical"
                    android:layout_width="1px"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@color/gray2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_line_ver_bottom"
                    style="@style/View.Vertical"
                    android:layout_width="1px"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@color/gray2"
                    android:visibility="invisible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/setting_item_left_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/iv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_circle_red"
                android:layout_alignTop="@id/setting_item_left_image"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/setting_item_left_image"
                android:visibility="invisible"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                style="@style/View.Horizontal"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"

                >

                <LinearLayout
                    style="@style/View.Horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/setting_item_center_text"
                        style="@style/View.Match"
                        android:singleLine="true"
                        android:textColor="@color/txt_gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/center_mid_text"
                        style="@style/View.Horizontal"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:textColor="@color/txt_gray"
                        android:textSize="12sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/center_right_text"
                        style="@style/View.Match"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:textColor="#929292"
                        android:textSize="12sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/right_layout"
                    style="@style/View.Match"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/setting_item_right_image"
                        style="@style/View.Match"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/arrow_right_gray" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_line_bottom"
        style="@style/View.Horizontal"
        android:layout_height="1px"
        android:background="@color/gray2"
        android:layout_marginLeft="0dp"
        />
</LinearLayout>