<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:paddingTop="-20dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="270dp"
            android:layout_height="160dp"
            android:src="@mipmap/ic_update_logo"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_cancel"
            android:layout_marginTop="70dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="7dp"
        android:background="@drawable/btn_commit_circle_top_gray"
        >
        <TextView
            android:textColor="#5b9cf8"
            android:text="发现新版本"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_version"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="新版本号:1.3.0"
            android:textColor="#333333"
            android:textSize="14sp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginTop="21dp"
            android:layout_height="110dp"
            android:scrollbars="none"
            android:fadingEdge="none"
            android:fadeScrollbars="false"
            >
            <TextView
                android:id="@+id/tv_desc"
                android:layout_marginTop="@dimen/divide_10_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="1.[修改]用户添加绑定信用卡时，新增短信验证码以增加安全性\n2.[修改]解决bug1.[修改]用户添加绑定信用卡时，新增短信验证码以增加安全性\n2.[修改]解决bug"
                android:lineSpacingExtra="@dimen/divide_10_dp"
                android:textSize="13sp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:minLines="6"
                />
        </ScrollView>
        <Button
            android:id="@+id/btn_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/text_Fc291d"
            android:layout_gravity="center_horizontal"
            android:text="立即更新"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_margin="25dp"
            />
    </LinearLayout>

</LinearLayout>