<?xml version="1.0" encoding="utf-8"?>
<finan.heng.com.apps.utils.SlidingFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f4f5f8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragment_finance_ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="25dp">

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_finance_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_finance_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</finan.heng.com.apps.utils.SlidingFrameLayout>