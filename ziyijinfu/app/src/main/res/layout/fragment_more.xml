            app:leftImage="@drawable/menu_score"
            app:rightImage="@drawable/arrow_right_gray" />

        <finan.heng.com.apps.app.ui.widget.MenuItem
            android:id="@+id/menu_wechat"
            style="@style/View.Horizontal"
            app:centerText="@string/menu_wechat"
