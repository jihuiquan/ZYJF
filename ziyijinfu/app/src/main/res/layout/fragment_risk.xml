<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_theme"
    android:id="@+id/fragment_risk"
    >
    <LinearLayout
        android:id="@+id/ll_unrisk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:minHeight="400dp"
        android:background="@drawable/bg_radis_white"
        android:layout_margin="15dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textColor="#666666"
            android:textSize="13sp"
            android:text="根据"
            />
        <TextView
            android:id="@+id/tv_risk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginTop="25dp"
            android:text="立即测评"
            />
        <Button
            android:id="@+id/btn_commit"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/bg_rect_oval_red"
            android:layout_gravity="center_horizontal"
            android:text="一键默认"
            android:textColor="#ffffff" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_risk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@drawable/bg_radis_white"
        android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="42dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/activity_risk_left" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:text="您的风险测评结果为"
                        android:textColor="#333"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="center"
                        android:src="@drawable/activity_risk_right" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/risk_result_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/activity_risk_aggressive_pic" />

                <TextView
                    android:id="@+id/invest_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="23dp"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/type_detail"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:textColor="#666666"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/complete"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="43dp"
                    android:background="@drawable/bg_rect_oval_red"
                    android:onClick="viewClick"
                    android:text="完成"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/re_evaluation"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:background="@null"
                    android:onClick="viewClick"
                    android:text="一键默认"
                    android:textColor="#666"
                    android:textSize="15sp" />
            </LinearLayout>
    </LinearLayout>
</LinearLayout>