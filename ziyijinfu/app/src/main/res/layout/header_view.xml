<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/View.Horizontal"
              android:orientation="vertical"
              android:background="@color/transparent">

    <LinearLayout
            style="@style/View.Horizontal"
            android:gravity="center_vertical"
            android:minHeight="45dp"
            android:orientation="horizontal"
            android:background="@color/transparent">


        <LinearLayout
                android:id="@+id/left_view"
                style="@style/View.Vertical"
                android:layout_gravity="left|center_vertical"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:orientation="horizontal"
                android:visibility="invisible">

            <ImageView
                    android:id="@+id/left_iv"
                    style="@style/View.Match"
                    android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/mid_view"
                style="@style/View.Full"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/mid_tv"
                        style="@style/View.Match"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="未知标题"
                        android:textColor="@color/txt_gray"
                        android:textSize="18sp"
                        android:visibility="visible"/>

                <TextView
                        android:id="@+id/bottom_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="@color/white"
                        android:visibility="gone"/>

            </LinearLayout>

            <ImageView
                    android:id="@+id/mid_view_icon"
                    style="@style/View.Match"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:src="@null"
                    android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/right_view"
                style="@style/View.Vertical"
                android:layout_gravity="right"
                android:background="@drawable/head_leftview_selector"
                android:gravity="center"
                android:minWidth="50dp"
                android:orientation="vertical"
                android:visibility="invisible">

            <ImageView
                    android:id="@+id/right_iv"
                    style="@style/View.Match"
                    android:visibility="invisible"/>

            <TextView
                    android:id="@+id/right_tv"
                    style="@style/View.Match"
                    android:text=" "
                    android:textColor="@color/txt_gray"
                    android:textSize="13sp"
                    android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_width="match_parent"
               android:layout_height="1px"
               android:background="@color/line_gray"

        />

</LinearLayout>