<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_hongbao_bg"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/redenvelopes">

        <ImageView
            android:id="@+id/head"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/body"
            android:layout_toRightOf="@id/head"
            android:layout_toLeftOf="@id/tail"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:id="@+id/hongbao_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:id="@+id/tv_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="15sp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:id="@+id/tv_banlance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="#fff"
                        android:text=""
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="红包面额"
                        android:textSize="13sp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:id="@+id/tv_jine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_grey_bo_white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/youxiaoqi"
                        android:textSize="13sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#fff"
                        />
                    <TextView
                        android:id="@+id/tv_youxiaoqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#fff"
                        android:text=""
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:ems="1"
        android:text="投资红包"
        android:layout_alignParentRight="true"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        />
        <ImageView
            android:id="@+id/status_type"
            android:visibility="gone"
            android:src="@drawable/award_used_up"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tail"
            android:layout_marginRight="-10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>